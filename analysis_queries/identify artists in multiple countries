SELECT
  a.artist_id,
  a.full_name AS artist_name,
  COUNT(DISTINCT m.country) AS total_countries
FROM `painting-475604.famous_painting.work_cleaned` AS w
JOIN `painting-475604.famous_painting.museum_cleaned` AS m
  ON w.museum_id = m.museum_id
JOIN `painting-475604.famous_painting.artist_cleaned` AS a
  ON w.artist_id = a.artist_id
GROUP BY a.artist_id, a.full_name
HAVING COUNT(DISTINCT m.country) > 1    
ORDER BY total_countries DESC;
